<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_4_dp"
    android:weightSum="100">

    <TextView
        android:id="@+id/menu_list_item_food_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        tools:text="Tea" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="35"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/menu_list_item_minus_bt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="-"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/menu_list_item_quantity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <Button
            android:id="@+id/menu_list_item_add_bt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="+"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_list_item_rupee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Rs. " />

        <TextView
            android:id="@+id/menu_list_item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            tools:text="20" />

    </LinearLayout>
</LinearLayout>